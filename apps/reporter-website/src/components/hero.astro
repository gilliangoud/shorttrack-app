---
import { Image } from '@astrojs/image/components';
import heroImage from 'website/assets/app-screenshot.png';
import Link from 'website/components/ui/link.astro';
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-16 md:pt-8">
  <div class="md:order-1 hidden md:block shadow-md rounded-md">
    <Image
      class={`
        rounded-md
      `}
      src={heroImage}
      alt="Screenshot of one of the info screens"
      width={1920}
      height={1080}
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
      Bring excitement to the rink with live results.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      the ultimate solution for event organizers. <wbr />
      Say goodbye to paperwork and streamline your event planning without excessive
      manual entry of data.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link href="#" rel="noopener">Get Started</Link>
      <Link size="lg" style="outline" rel="noopener" href="/contact">
        Get in touch
      </Link>
    </div>
  </div>
</main>
